@model JABlog.Models.BlogPost
@using JABlog.Enums;
@using JABlog.Services.Interfaces

@inject IImageService _ImageService




@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <!-- Start Banner Area -->
            <div class="banner banner-single-post post-formate post-layout pb--40">
                <div class="container">
                            <!-- Start Single Slide  -->
                            <div class="content-block">
                                <!-- Start Post Content  -->
                                <div class="post-content">
                                    <div class="post-cat">
                                        <div class="post-cat-list">
                                            <a class="hover-flip-item-wrapper" href="#">
                                                <span class="hover-flip-item">
                                                    <span data-text="FEATURED POST">FEATURED POST</span>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                    <h1 class="title">
                                        @Model.Title
                                    </h1>
                                    <!-- Post Meta  -->
                                    <div class="post-meta-wrapper">
                                        <div class="post-meta">
                                            <div class="post-author-avatar border-rounded">
                                                <img src="assets/images/post-images/author/author-image-3.png" alt="Author Images">
                                            </div>
                                            <div class="content">
                                                <h6 class="post-author-name">
                                                    <a class="hover-flip-item-wrapper" href="author.html">
                                                        <span class="hover-flip-item">
                                                            <span data-text="Jacob Apple">Jacob Apple</span>
                                                        </span>
                                                    </a>
                                                </h6>
                                                <ul class="post-meta-list">
                                                    <li>@Model.Created</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <ul class="social-share-transparent justify-content-end">
                                            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                            <li><a href="#"><i class="fas fa-link"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- End Post Content  -->
                            </div>
                            <!-- End Single Slide  -->
                        </div>
                    </div>
                
            
            <!-- End Banner Area -->
            <!-- Start Blog Details  -->
            <div class="axil-post-details">
                <p class="has-medium-font-size">
                   @Html.Raw(Model.Abstract)
                </p>
                <figure class="wp-block-image alignwide text-center">
                <img src="@_ImageService.ConvertByteArrayToFile(Model.ImageData!, Model.ImageType!, (int)DefaultImage.BlogPostImage)" alt="Post Images">
                </figure>
                <p>@Html.Raw(Model.Content)</p>

                <div class="tagcloud">
                @foreach(Tag tag in Model.Tags)
                {
                    <a asp-action="Details" asp-controller="Tags" asp-route-id="@tag.Id">@tag.Name</a>
                }               
                </div>

                <div class="social-share-block">
                    <ul class="social-icon icon-rounded-transparent md-size">
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                    </ul>
                </div>

                <!-- Start Author  -->
            <partial name="_AuthorArea" />
                <!-- End Author  -->
                <!-- Start Comment Form Area  -->
                <div class="axil-comment-area">
                    <div class="axil-total-comment-post">
                        <div class="title">
                            <h4 class="mb--0">@Model.Comments.Count Comments</h4>
                        </div>
                        <div class="add-comment-button cerchio">
                            <a class="axil-button button-rounded" href="post-details.html" tabindex="0"><span>Add Your Comment</span></a>
                        </div>
                    </div>

                    <!-- Start Comment Respond  -->
                    <div class="comment-respond">
                        <h4 class="title">Post a comment</h4>
                        <form asp-controller="Comments" asp-action="Create" method="post">
                            <input type="hidden" asp-for="Id" name="BlogPostId" />
                            <input type="hidden" asp-for="Slug" />

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="message" class="control-label"></label>
                                        <textarea id="Body" name="Body" class="editor form-control"></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-submit cerchio">
                                        <input  type="submit" class="axil-button button-rounded" value="Post Comment">
                                    </div>
                                </div>
                        </form>
                    </div>
                    <!-- End Comment Respond  -->
                    <!-- Start Comment Area  -->
                    <div class="axil-comment-area">
                        <h4 class="title">@Model.Comments.Count Comments</h4>
                        <ul class="comment-list">
                            <!-- Start Single Comment  -->
                            @foreach(var comment in Model.Comments.OrderByDescending(c=>c.Created))
                            {
                                <partial name="_CommentsPartial" model="@comment" />
                            }                                                       
                            <!-- End Single Comment  -->
                        </ul>
                    </div>
                    <!-- End Comment Area  -->

                </div>
                <!-- End Comment Form Area  -->


            </div>
            <!-- End Blog Details  -->
        </div>

        <div class="col-lg-4 col-xl-4 mt_md--40 mt_sm--40">
            <partial name="_Sidebar" />
        </div>

    </div>

    <div>
        <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/ckeditor5/build/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('.editor'), {
                licenseKey: '',
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(error => {
                console.error('Oops, something went wrong!');
                console.error('Please, report the following error on https://github.com/ckeditor/ckeditor5/issues with the build id and the error stack trace:');
                console.warn('Build id: xx09iayzufkn-lkt434h3lx2z');
                console.error(error);
            });
    </script>
}
